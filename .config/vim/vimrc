""""" VIM CONFIGURATION """""


    let mapleader=" "
    nnoremap ; :
    nnoremap : ;
    nnoremap <BS> X
    nnoremap Y y$
    nnoremap <leader>q ZQ
    nnoremap <leader><leader> :set relativenumber!<CR>
    nnoremap <leader>, :set nohlsearch<CR>
    noremap <leader>s :Startify<CR>
    noremap <leader>y :Yazi<CR>

    "Line down and up
    nnoremap <A-j> :m .+1<CR>
    nnoremap <A-k> :m .-2<CR>
    inoremap <A-j> <Esc>:m .+1<CR>gi
    inoremap <A-k> <Esc>:m .-2<CR>gi
    vnoremap <A-j> :m '>+1<CR>gv
    vnoremap <A-k> :m '<-2<CR>gv

    "Select all and sudo trick
    noremap <leader>a :normal! ggV$G$<CR>
    command! W execute 'w !sudo tee % > /dev/null' <bar> edit!

    "Windows focus, rearrange and swap
    noremap <C-j> <C-w>j
    noremap <C-k> <C-w>k
    noremap <C-h> <C-w>h
    noremap <C-l> <C-w>l
    noremap <C-n> <C-w>w
    noremap <leader>r <C-w>r
    noremap <leader>l <C-w>L
    noremap <leader>h <C-w>H

    "Buffers prev, next, delete,show and new vertical split
    noremap <leader>b :bp<CR>
    noremap <leader>n :bn<CR>
    noremap <leader>x :bd<CR>
    nnoremap <leader><Tab> :buffer<Space><Tab>
    noremap <leader>v :vnew<CR>

    "Numbered list macro
    noremap <leader>c I0gvg
    
    "FZF search
    set grepprg=rg\ --vimgrep\ --smart-case\ --follow
    nnoremap <A-b> :Buffers<CR>
    nnoremap <A-c> :Changes<CR>
    nnoremap <A-d> :Files<CR>
    nnoremap <A-f> :Rg<CR>
    nnoremap <A-a> :Lines<CR>
    nnoremap <A-l> :BLines<CR>
    nnoremap <A-m> :Marks<CR>
    nnoremap <A-j> :Jumps<CR>
    nnoremap <A-h> :History<CR>
    nnoremap <A-.> :History:<CR>
    nnoremap <A-,> :History/<CR>


    "Optional settings
    set background=dark   
    colorscheme wildcharm
    syntax on
    filetype plugin indent on
    set nocompatible
    set autoread
    set backspace=indent,eol,start
    set cul
    set directory=~/Ve≈ôejn√©//
    set hidden
    set ignorecase smartcase
    set incsearch
    set laststatus=2
    set lazyredraw
    set mouse=a
    set number
    set pastetoggle=<F2>
    set ruler
    set scrolloff=2
    set showmatch mat=2
    set showtabline=1
    set spelllang=cs,en
    set tabstop=2 shiftwidth=2 expandtab
    set wildcharm=<Tab>
    set wildmenu
    set wildoptions=pum,tagfile
    
    "Status bar
     :set statusline=%<ÓüÖ\ %f\ %h%w%m%r%a%=%-33.(Û∞Üø\ %v\ Line:%l/%L%)\ %y\ %P
       " set statusline +=\ %n          "buffer number
       " set statusline+=\ %F\          "file path
       " set statusline +=\ %m\         "modified flag
       " set statusline+=\ %v\          "cursor column
       " set statusline+=\ %l/%L\       "line/total lines
       " set statusline+=%=             "indent to the end
       " set statusline +=\ %p%%        "position %

   "Plugins
   call plug#begin()
     " List your plugins here
     Plug 'tpope/vim-commentary'
     Plug 'mhinz/vim-startify'
     Plug 'junegunn/vim-peekaboo'
     Plug 'LnL7/vim-nix'
     Plug 'chriszarate/yazi.vim'
     Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }
     Plug 'junegunn/fzf.vim'
   call plug#end()


    "Cursor modes changes
        " Vertical bar in insert mode  
        let &t_SI = "\<Esc>[6 q"
        " Underline in replace mode
        let &t_SR = "\<Esc>[4 q"
        " Block in other modes
        let &t_EI = "\<Esc>[2 q"


""""" END OF FILE """""
